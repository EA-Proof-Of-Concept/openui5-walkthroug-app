<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="openui5.walkthrough.ts.controller.App"
    displayBlock="true">
        
    <Button class="sapUiSmallMargin"
            press=".onSayHello"
            text="Haz clic aquí"
            type="Emphasized" />

    <Input class="sapUiSmallMargin"
           value="{/persona/nombre}"
           description="¡Hola {/persona/nombre}!"
           valueLiveUpdate="true"
           width="60%"/>
      
</mvc:View>
